{
  "static": {
    "directory": "public",
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/$1"
      }
    ]
  },
  "routes": [
    {
      "src": "/post/.*",
      "methods": ["GET"],
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    }
  ]
}
